<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="filterType"
            type="com.malibin.hearthstone.db.data.entity.metadata.MetaData.FilterType" />

        <variable
            name="filterDetail"
            type="com.malibin.hearthstone.db.data.entity.metadata.MetaData" />

        <variable
            name="clickListener"
            type="com.malibin.hearthstone.db.presentation.card.filter.FilterChipGroup.FilterChipClickListener" />
    </data>

    <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> clickListener.onChipClick(view, filterType, filterDetail)}"
        android:text="@{filterDetail.name}"
        app:chipMinTouchTargetSize="2dp" />
</layout>
